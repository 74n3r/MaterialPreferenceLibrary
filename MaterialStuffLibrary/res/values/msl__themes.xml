<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AlertDialogProTheme" parent="android:Theme.Dialog"></style>

    <style name="AlertDialogProTheme.Light" parent="android:Theme.Dialog"></style>

    <style name="AlertDialogProTheme.Base" parent="AlertDialogProTheme">
        <!-- Background -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <!-- ListView -->
        <item name="adpListItemHeight">48dip</item>
        <!-- Title -->
        <item name="adpTitleDividerHeight">@dimen/alert_dialog_title_divider_height</item>
        <item name="adpTitleHeight">@dimen/alert_dialog_title_height</item>
    </style>

    <style name="AlertDialogProTheme.Base.Light" parent="AlertDialogProTheme.Light">
        <!-- Background -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <!-- ListView -->
        <item name="adpListItemHeight">48dip</item>
        <!-- Title -->
        <item name="adpTitleDividerHeight">@dimen/alert_dialog_title_divider_height</item>
        <item name="adpTitleHeight">@dimen/alert_dialog_title_height</item>
    </style>
 
    <style name="AlertDialogProTheme.Material" parent="AlertDialogProTheme.Base">
        <!-- Background -->
        <item name="adpBackground">@drawable/msl__dialog_background_material_dark</item>
        <item name="android:textColorPrimary">@color/msl__primary_text_material_dark</item>
        <item name="android:textColorSecondary">@color/secondary_text_material_dark</item>
        <item name="android:textAppearanceMedium">@style/TextAppearanceMaterialMedium</item>
        <!-- Title -->
        <item name="android:windowTitleStyle">@style/DialogWindowTitle.Material</item>
        <item name="adpListItemHeight">48dip</item>
        <item name="adpListItemTextColor">@color/msl__primary_text_material_dark</item>
        <item name="adpListItemBackground">@drawable/msl__item_background_material_dark</item>
        <item name="adpListDivider">@drawable/msl__list_divider_material_dark</item>
        <!-- ListView -->
        <item name="android:listViewStyle">@style/Widget.Material.ListView</item>
        <!-- ButtonBar-->
        <item name="adpButtonBarStyle">@style/Widget.Material.ButtonBar</item>
        <item name="adpButtonBarButtonStyle">@style/Widget.Material.Button</item>
        <item name="alertDialogProStyle">@style/AlertDialogPro.Material</item>
    </style>

    <style name="AlertDialogProTheme.Material.Light" parent="AlertDialogProTheme.Base.Light">
        <!-- Background -->
        <item name="adpBackground">@drawable/msl__dialog_background_material_light</item>
        <item name="android:textColorPrimary">@color/msl__primary_text_material_light</item>
        <item name="android:textColorSecondary">@color/secondary_text_material_light</item>
        <item name="android:textAppearanceMedium">@style/TextAppearanceMaterialMedium</item>
        <!-- Title -->
        <item name="android:windowTitleStyle">@style/DialogWindowTitle.Material.Light</item>
        <item name="adpListItemHeight">48dip</item>
        <item name="adpListItemTextColor">@color/msl__primary_text_material_light</item>
        <item name="adpListItemBackground">@drawable/msl__item_background_material_light</item>
        <item name="adpListDivider">@drawable/msl__list_divider_material_light</item>
        <!-- ListView -->
        <item name="android:listViewStyle">@style/Widget.Material.ListView</item>
        <!-- ButtonBar-->
        <item name="adpButtonBarStyle">@style/Widget.Material.ButtonBar</item>
        <item name="adpButtonBarButtonStyle">@style/Widget.Material.Button.Light</item>
        <item name="alertDialogProStyle">@style/AlertDialogPro.Material.Light</item>
    </style>
</resources>
