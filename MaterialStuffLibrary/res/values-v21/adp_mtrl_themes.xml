<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AlertDialogProTheme.Material" parent="android:Theme.Material.Dialog.Alert">
        <!-- Message -->
        <item name="adpMessageTextAppearance">@style/TextAppearance.Material.Subhead</item>
        <!-- ListView -->
        <item name="adpListItemHeight">48dip</item>
        <item name="adpListItemTextColor">?android:attr/textColorPrimary</item>
        <item name="adpListItemTextAppearance">?android:attr/textAppearanceListItemSmall</item>
        <item name="adpListSingleChoiceTextAppearance">?android:attr/textAppearanceMedium</item>
        <item name="adpListMultiChoiceTextAppearance">?android:attr/textAppearanceMedium</item>
        <item name="adpListItemBackground">@drawable/adp_item_background_material_dark</item>
        <item name="adpListDivider">@null</item>
        <!-- ButtonBar-->
        <item name="adpButtonBarStyle">@style/Widget.Material.ButtonBar</item>
        <item name="adpButtonBarButtonStyle">@style/Widget.Material.Button</item>
        <item name="adpButtonBarPositiveButtonStyle">?attr/adpButtonBarButtonStyle</item>
        <item name="adpButtonBarNegativeButtonStyle">?attr/adpButtonBarButtonStyle</item>
        <item name="adpButtonBarNeutralButtonStyle">?attr/adpButtonBarButtonStyle</item>
        <item name="alertDialogProStyle">@style/AlertDialogPro.Material</item>
    </style>

    <style name="AlertDialogProTheme.Material.Light" parent="android:Theme.Material.Light.Dialog.Alert">
        <!-- Message -->
        <item name="adpMessageTextAppearance">@style/TextAppearance.Material.Subhead</item>
        <!-- ListView -->
        <item name="adpListItemHeight">48dip</item>
        <item name="adpListItemTextColor">?android:attr/textColorPrimary</item>
        <item name="adpListItemTextAppearance">?android:attr/textAppearanceListItemSmall</item>
        <item name="adpListSingleChoiceTextAppearance">?android:attr/textAppearanceMedium</item>
        <item name="adpListMultiChoiceTextAppearance">?android:attr/textAppearanceMedium</item>
        <item name="adpListItemBackground">@drawable/adp_item_background_material_light</item>
        <item name="adpListDivider">@null</item>
        <!-- ButtonBar-->
        <item name="adpButtonBarStyle">@style/Widget.Material.ButtonBar</item>
        <item name="adpButtonBarButtonStyle">@style/Widget.Material.Button.Light</item>
        <item name="adpButtonBarPositiveButtonStyle">?attr/adpButtonBarButtonStyle</item>
        <item name="adpButtonBarNegativeButtonStyle">?attr/adpButtonBarButtonStyle</item>
        <item name="adpButtonBarNeutralButtonStyle">?attr/adpButtonBarButtonStyle</item>
        <item name="alertDialogProStyle">@style/AlertDialogPro.Material.Light</item>
    </style>
</resources>